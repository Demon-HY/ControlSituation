<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.control.situation.mapper.SysRelationMapper">
    <resultMap id="SysRelationResultMap" type="com.control.situation.entity.SysRelationInfo">
    	<id column="id" property="id" jdbcType="INTEGER" />
        <result column="menu_id" property="menuId" jdbcType="INTEGER" />
        <result column="role_id" property="roleId" jdbcType="INTEGER" />
    </resultMap>

    <sql id="Base_Column_List">
	id,menu_id,role_id
    </sql>

    <select id="findOne" parameterType="java.lang.Integer" resultMap="SysRelationResultMap">
        SELECT
        <include refid="Base_Column_List" />
        FROM sys_relation
        WHERE id = #{id,jdbcType=INTEGER}
    </select>

    <select id="findAll"  resultMap="SysRelationResultMap">
        SELECT
        <include refid="Base_Column_List" />
        FROM sys_relation
    </select>

    <select id="findByParams" resultMap="SysRelationResultMap" parameterType="SysRelationInfo">
        SELECT
        <include refid="Base_Column_List" />
        FROM sys_relation
        <where>
    
	        <if test="id != null" >
			    id = #{id,jdbcType=INTEGER},
	        </if>
    
	        <if test="menu_id != null" >
			    menu_id = #{menuId,jdbcType=INTEGER},
	        </if>
    
	        <if test="role_id != null" >
			    role_id = #{roleId,jdbcType=INTEGER},
	        </if>
        </where>
    </select>

    <delete id="delete" parameterType="java.lang.Integer">
        DELETE FROM sys_relation
        WHERE id = #{id,jdbcType=${tempColumn.columnType}}
    </delete>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id" parameterType="com.control.situation.sys_relation.SysRelationInfo">
        INSERT INTO
        sys_relation (menu_id,role_id)
        values
        (#{menuId,jdbcType=INTEGER},#{roleId,jdbcType=INTEGER})
    </insert>

    <update id="update" parameterType="com.control.situation.sys_relation.SysRelationInfo">
        UPDATE sys_relation
        <set>
	    	        	    	        
            <if test="menuId != null">
                menu_id = #{menuId,jdbcType=INTEGER},
            </if>
	        	    	        
            <if test="roleId != null">
                role_id = #{roleId,jdbcType=INTEGER},
            </if>
	        	    
        </set>
        WHERE id = #{id,jdbcType=INTEGER}
    </update>
</mapper>